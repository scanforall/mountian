.thumbs {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 160px;

  @include phones {
    display: none;
  }
}

.thumb__item {
  height: 100px;
  transition: .2s;
  overflow: hidden;
  
    &:hover {
    outline: 3px solid #f29400;
  }
}

.thumb__pic {

}

.thumb {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.thumb__link {
  display: block;
  height: 100%;
  padding: 0;
}

.active {
  outline: 3px solid #f29400
}